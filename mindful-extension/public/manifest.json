{
  "manifest_version": 3,
  "name": "Digital Pause",
  "version": "1.0",
  "description": "Disrupt mindless scrolling by creating a mindful barrier before accessing addictive sites.",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "DP.png",
      "48": "DP.png",
      "128": "DP.png"
    }
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "options.html",
        "pause.html",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "DP.png",
    "48": "DP.png",
    "128": "DP.png"
  }
}